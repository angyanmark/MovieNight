<Page
    x:Class="MovieNight.Views.DiscoverTVPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:animations="using:Microsoft.Toolkit.Uwp.UI.Animations"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:models="using:MovieNight.Core.Models"
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d">

    <Grid
        x:Name="ContentArea"
        Margin="{StaticResource SmallLeftRightMargin}"
        KeyDown="Grid_KeyDown">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState>
                    <VisualState.StateTriggers>
                        <!--641 is the default CompactModeThresholdWidth in NavigationView -->
                        <AdaptiveTrigger MinWindowWidth="900" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="discover.(RelativePanel.AlignHorizontalCenterWithPanel)" Value="true" />
                        <Setter Target="discover.(RelativePanel.Orientation)" Value="Horizontal" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <!--The SystemControlPageBackgroundChromeLowBrush background represents where you should place your content. 
                Place your content here.-->
        <ScrollViewer>
            <StackPanel Margin="0, 20, 0, 0">
                <RelativePanel>
                    <StackPanel x:Name="discover" RelativePanel.AlignHorizontalCenterWithPanel="True" >

                        <StackPanel x:Name="yearStack" Margin="24, 0, 24, 15" HorizontalAlignment="Center">
                            <ComboBox x:Name="yearCombo" Header="Year" Width="150" ItemsSource="{x:Bind years}" />
                        </StackPanel>

                        <StackPanel x:Name="genreStack" Margin="24, 0, 24, 15" HorizontalAlignment="Center">
                            <ComboBox x:Name="genreCombo" Header="Genre" Width="150" ItemsSource="{x:Bind genres}" />
                        </StackPanel>

                        <StackPanel x:Name="sortByStack" Margin="24, 0, 24, 15" HorizontalAlignment="Center">
                            <ComboBox x:Name="sortByCombo" Header="Sort by" Width="250" >
                                <ComboBoxItem IsEnabled="True">
                                    <x:String>TV Show Popularity</x:String>
                                </ComboBoxItem>

                                <ComboBoxItem IsEnabled="False">
                                    <x:String>First Air Date</x:String>
                                </ComboBoxItem>

                                <ComboBoxItem IsEnabled="True" Margin="{StaticResource MediumLeftMargin}">
                                    <x:String>Newest First</x:String>
                                </ComboBoxItem>

                                <ComboBoxItem IsEnabled="True" Margin="{StaticResource MediumLeftMargin}">
                                    <x:String>Earliest First</x:String>
                                </ComboBoxItem>

                                <ComboBoxItem IsEnabled="False">
                                    <x:String>Vote Average</x:String>
                                </ComboBoxItem>

                                <ComboBoxItem IsEnabled="True" Margin="{StaticResource MediumLeftMargin}">
                                    <x:String>Highest Vote Average First</x:String>
                                </ComboBoxItem>

                                <ComboBoxItem IsEnabled="True" Margin="{StaticResource MediumLeftMargin}">
                                    <x:String>Lowest Vote Average First</x:String>
                                </ComboBoxItem>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel x:Name="findStack" Margin="24, 23, 24, 0" HorizontalAlignment="Center">
                            <Button x:Name="findButton" Click="FindButton_Click" Content="Find" Width="100"
                            Background="{ThemeResource ComboBoxItemSelectedDisabledBackgroundThemeBrush}"
                            BorderBrush="{ThemeResource ComboBoxItemSelectedDisabledForegroundThemeBrush}"
                            Foreground="{ThemeResource ComboBoxItemSelectedForegroundThemeBrush}"/>
                        </StackPanel>

                    </StackPanel>
                </RelativePanel>

                <Grid x:Name="postersArea"
                    Background="{ThemeResource SystemControlChromeHighAcrylicWindowMediumBrush}"
                    Margin="0, 60, 0, 0">
                    <controls:AdaptiveGridView
                        ItemsSource="{x:Bind ViewModel.Source, Mode=OneWay}"
                        ItemClickCommand="{x:Bind ViewModel.ItemClickCommand}"
                        StretchContentForSingleRow="False"
                        SelectionMode="None"
                        IsItemClickEnabled="True"
                        animations:Connected.ListItemElementName="itemThumbnail"
                        animations:Connected.ListItemKey="animationKeyPopular_Movies"
                        DesiredWidth="240">
                        <controls:AdaptiveGridView.ItemTemplate>
                            <DataTemplate x:DataType="models:DiscoverItem">
                                <Grid
                                    x:Name="itemThumbnail">
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <Image Source="{x:Bind poster_path}">
                                            <ToolTipService.ToolTip>
                                                <TextBlock Text="{Binding name}"/>
                                            </ToolTipService.ToolTip>
                                        </Image>
                                        <!--<TextBlock
                                        Margin="{StaticResource SmallTopBottomMargin}"
                                        HorizontalAlignment="Center"
                                        Text="{x:Bind title}"
                                        Style="{ThemeResource BodyTextStyle}" />-->
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </controls:AdaptiveGridView.ItemTemplate>
                    </controls:AdaptiveGridView>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
